  }

  #transition-button {
    border-radius: 70px;
    border: 2px solid #baa2e1; 
    background-color: #4e2971; 
    font-size: 100%;
    margin-left: 30vw;
    margin-right: 30vw;
    margin-top: 40vh;
    width: 40vw;
    height: fit-content;
    display: block;
    cursor: pointer;
    overflow: hidden;
    animation-duration: 2s;
    animation-fill-mode: forwards;
  }

  @keyframes animate-button {
    0% {
      height: 1em;
    }
    50% {
      margin-top: 0vh;
      margin-left: 10vw;
      margin-right: 10vw;
      width: 80vw;
    }
    100% {
      margin-top: 10vh;
      margin-left: 10vw;
      margin-right: 10vw;
      width: 80vw;
      height: 80vh;
    } 
