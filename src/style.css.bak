html, body {
  margin: 0;
  padding: 0;
}

#favicon {
  margin: 5vw;
}

h1 {
  font-style: normal;
  font-size: 50%;
}

.stars-background {
  position: fixed;
  background-color: #000010;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.info-area {
}

@media only screen and (min-width: 767px) {
    #planet-container {
    display: flex;
    justify-content: center;
    position: absolute;
    margin-left: 0vw;
  
    top: 10vw;
    left: 37.5vw;
    right: 37.5vw;

    width: 25vw;
    height: 35vh;

    overflow: hidden;
    animation-duration: 1s;
    animation-fill-mode: forwards;
  }

  #planet {
    position: absolute;
    top: 2%;
    width: 300px;
    height: 300px;
  }

  #transition-button {
    border-radius: 70px;
    border: 2px solid #baa2e1; 
    background-color: #4e2971; 
    font-size: 100%;
    margin-bottom: 0vw;
    margin-left: 25vw;
    margin-right: 30vw;
    margin-top: 40vh;
    width: 50vw;
    height: fit-content;
    display: block;
    cursor: pointer;
    overflow: hidden;
    animation-timing-function: ease;
    animation-duration: 2s;
    animation-fill-mode: forwards;
  }

  @keyframes animate-button {
    0% {
      height: 1em;
    }
    50% {
      margin-top: 0vh;
      margin-left: 10vw;
      margin-right: 10vw;
      width: 80vw;
    }
    100% {
      margin-top: 0vh;
      margin-left: 10vw;
      margin-right: 10vw;
      width: 80vw;
      height: 80vh;
    } 
  }

  @keyframes animate-planet {
    0% {
    }
    100% {
      margin-left: 0%;
      top: 0;
      left: 0;
      width: 25vw;
      height: 25vh;
    }
  }
}

@media only screen and (max-width: 767px) {
  #planet-container {
    display: flex;
    justify-content: center;
    position: absolute;
    margin-left: 0vw;
    margin-top: ; 
